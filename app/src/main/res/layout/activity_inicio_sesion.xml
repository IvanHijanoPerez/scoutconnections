<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioSesionActivity">

    <TextView
        android:id="@+id/iniciosesion_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:gravity="center"
        android:text="Inicio de sesión"
        android:textColor="#611E80"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/correo_edt"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/contrasena_edt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"

        android:fontFamily="@font/nunito_sans_extrabold"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/contrasena_edt"
        android:layout_width="272dp"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/iniciarsesion_btn"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/iniciarsesion_btn"
        android:layout_width="272dp"
        android:layout_height="wrap_content"

        android:layout_above="@id/recuperarcontrasena_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"

        android:background="@drawable/custom_btn"
        android:drawableLeft="@drawable/ic_login"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:text="Iniciar sesión"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/recuperarcontrasena_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/googleLogin_btn"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="¿Has olvidado tu contraseña? Recupérala"
        android:textAlignment="center" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleLogin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/notienescuenta_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"></com.google.android.gms.common.SignInButton>

    <TextView
        android:id="@+id/notienescuenta_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:gravity="center_horizontal"
        android:text="¿No tienes una cuenta? Regístrate"
        android:textAlignment="center" />



</RelativeLayout>